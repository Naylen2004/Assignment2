<div class="container">
    <h1><%=title %></h1>
    <a href="/business-add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Add a Business
    </a>
    <div class="row">
        <div class="column">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Number</th>
                        <th scope="col">Email</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="businessList">
                    <% for(let count=0; count < business.length; count++) { %>                   
                        <tr>
                            <td scope="row" class="text-center"></td>
                            <td><%= business[count].name %></td>
                            <td><%= business[count].number %></td>
                            <td><%= business[count].email %></td>
                            <td class="text-center col-1">
                                <a class="btn btn-primary" href="/business-edit/<%= business[count].id %>">
                                    Edit
                                </a>
                            </td>
                            <td class="text-center col-1">
                                <a class="btn btn-warning" href="/business-delete/<%= business[count].id %>">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>